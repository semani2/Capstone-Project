<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:padding="5dp"
        android:id="@+id/iti_image_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iti_place_text_view"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            tools:text="Bell Tower, NC State"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iti_location_text_view"
            android:textColor="@color/text_secondary"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            tools:text="Raleigh, NC"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iti_time_text_view"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_secondary"
            tools:text="You plan to visit at 09:00 am"/>
    </LinearLayout>

</LinearLayout>