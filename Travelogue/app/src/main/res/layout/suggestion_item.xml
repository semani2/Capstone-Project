<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="220dp"
    android:layout_margin="5dp"
    android:elevation="4dp"
    android:layout_marginBottom="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/suggestions_image_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.2"
            android:id="@+id/suggestion_text_layout"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:id="@+id/suggestion_name_text_view"
                tools:text="Museum of Art"
                android:textSize="14sp"
                android:layout_marginStart="3dp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:id="@+id/suggestion_address_text_view"
                android:textSize="12sp"
                tools:text="3939 Glenwood Avenue, Apt 363, Raleigh, NC, 27612"
                android:layout_marginStart="3dp"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>